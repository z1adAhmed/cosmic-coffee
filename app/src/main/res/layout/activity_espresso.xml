<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff2e9"
    tools:context=".espresso">


    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:fontFamily="cursive"
        android:text=" Espresso"
        android:textColor="#704E08"
        android:textSize="85dp"
        tools:layout_editor_absoluteX="98dp"
        tools:layout_editor_absoluteY="-2dp" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="361dp"
        android:layout_height="349dp"
        android:layout_below="@id/textView2"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="-11dp"
        android:layout_marginEnd="32dp"
        app:srcCompat="@drawable/espresso"
        tools:layout_editor_absoluteX="22dp"
        tools:layout_editor_absoluteY="65dp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/imageView"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="-37dp"
        android:fontFamily="cursive"
        android:text="Ingredients"
        android:textColor="#864C0A"
        android:textSize="50dp"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="517dp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView4"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:fontFamily="sans-serif-medium"
        android:text="Espresso is a concentrated form of coffee,served in shots. It's made of two ingredients finely ground, 100% coffee, and hot water"
        android:textColor="#49331F"
        android:textSize="29dp"
        tools:layout_editor_absoluteX="22dp"
        tools:layout_editor_absoluteY="633dp" />


    <Button
        android:id="@+id/purchase4"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="23dp"
        android:background="@drawable/round_button"
        android:text="purchase 20 L.E"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:typeface="monospace" />
</RelativeLayout>