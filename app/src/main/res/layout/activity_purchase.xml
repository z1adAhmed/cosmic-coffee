<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#fff2e9"
    android:layout_height="match_parent"
    tools:context=".purchase">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="361dp"
        android:layout_height="349dp"
        android:layout_below="@id/textView2"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="false"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="-11dp"
        android:layout_marginEnd="26dp"
        android:src="@drawable/purshace" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/imageView"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="-21dp"
        android:fontFamily="cursive"
        android:text="Your purchase was completed successfully and your points were added to your account."
        android:textColor="#864C0A"
        android:textSize="50dp" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView4"
        android:layout_marginTop="44dp"
        android:fontFamily="serif"
        android:text="Your opinion matters:"
        android:textColor="@color/black"
        android:textSize="25dp" />

    <Button
        android:id="@+id/feedback"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView4"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="84dp"
        android:background="@drawable/round_button"
        android:text="Feedback"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:typeface="monospace" />


</RelativeLayout>